{
	"name": "svj-monorepo",
	"workspaces": [
		"configs/*",
		"libs/*"
	],
	"scripts": {
		"svg": "svj",
		"lint": "eslint --fix \"**/*.{ts,tsx}\"",
		"format": "prettier --write \"**/*.{js,ts,tsx,md}\"",
		"bundle": "turbo run bundle",
		"postinstall": "npm run bundle"
	},
	"dependencies": {
		"svj": "*"
	},
	"devDependencies": {
		"@configs/babel": "*",
		"@configs/eslint": "*",
		"@configs/prettier": "*",
		"turbo": "latest"
	},
	"private": true,
	"packageManager": "npm@8.5.5",
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=14.0.0"
	}
}
